
T1 = SCAN {Twitter, default, andrew} AS (follower:int, followee:int);

STORE T1, {T1};

T2 = SCAN {Twitter} AS (follower:int, followee:int);

STORE T2, {T2};

T3 = JOIN T1 BY follower, T2 by followee;

STORE T3, {T3};


T4 = APPLY T3 EMIT (x=$0, y=$3);
STORE T4, {T4};

